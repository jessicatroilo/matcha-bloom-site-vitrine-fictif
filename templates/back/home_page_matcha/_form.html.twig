<!-- This template is used to display the form to edit an product fav -->

{% form_theme form './form/_back_form_theme.html.twig' %}
<div class="w-full px-5 mx-auto">
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image) }}
    
    <button class="mt-3 backoffice-btn-update" aria-label="Bouton pour enregistrer le produit">{{ button_label|default('Enregistrer') }}</button>
    <div class="hidden">
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}
</div>